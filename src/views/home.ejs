                                                <div class="datos">
                                                    <div class="caja1">
                                                        <h4>
                                                            <%= producto.name %>
                                                        </h4>
                                                        <p>
                                                            $ <%= toThousand(producto.price) %>
                                                        </p>
                                                    </div>
                                                    <div class="caja2">
                                                        <div>
                                                            <div class="color-circle"
                                                                style=<%='background-color:' +
