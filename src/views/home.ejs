<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head')  %> 
<body class="home">

    <%- include('./partials/header')  %>

    <main>
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                    class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/img/products/super-sale.jpg" class="imagen1" alt="humo-azul">
                    <img src="/img/products/super-sale2.jpg" class="imagen2" alt="humo-azul">
                </div>
                <div class="carousel-item">
                    <img src="/img/products/circulo-a.jpg" class="imagen1" alt="circulo">
                    <img src="/img/products/3.jpg" class="imagen2" alt="circulo">
                </div>
                <div class="carousel-item">
                    <img src="/img/products/1.jpg" class="imagen1" alt="imagen1">
                    <img class="imagen2" src="/img/products/2.jpg" alt="imagen2">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <div class="container-fluid">
            <div class="primero">
                <section>
                    <% principales.forEach(producto=> { %>
                        <article>
                            <a class="a-art-pri" href="/products/detail/ <%= producto.id %> ">
                            <img src="/img/products/<%= producto.image[0] %>" alt="">
                            <div class="datos">
                                <div class="caja1">
                                    <h4>
                                        <%= producto.name %>
                                    </h4>
                                    <p>$ <%= toThousand(producto.price) %>
                                    </p>
                                </div>
                                <div class="caja2">
                                    <div>
                                        <div class="color-circle" style=<%='background-color:' +
                                            producto.colors[0] %>></div>
                                        <div class="color-circle" style=<%='background-color:' +
                                            producto.colors[1] %>></div>
                                        <div class="color-circle" style=<%='background-color:' +
                                            producto.colors[2] %>></div>
                                    </div>
                                    <div class="heart"><i class="far fa-heart"></i></div>
                                </div>
                                <span>¡Envio Gratis!</span>
                            </div>
                        </a>
                        </article>
                        <% }) %>
                  
                </section>
                <div class="homb-salta">
                    <img class="hombre-salta1" src="/img/products/hombre-salta.jpg" alt="hombre-salta">
                    <img class="hombre-salta2" src="/img/products/hombre-salta2.jpg" alt="hombre-salta2">
                </div>
            </div>

