<!DOCTYPE html>
<html lang="es">
<!--Head-->
<%- include('./partials/head') %> 

<body class="results">
    <!--Header-->
    <%- include('./partials/header')  %>
    
    <main>
        <div class="resultado">
            <h4>Resultado de la búsqueda: <%= buscador %> </h3>
        </div>
        
        <% if (productos.length > 0) { %>

            <section>
                <% for( let j = 0; j < imagenes.length; j++ ) { %>
                    <article>
                        <a href="/products/detail/<%= imagenes[j].Producto.id %>">
                                <img src="/img/products/<%= imagenes[j].nombre %>" alt="">
                        </a>
                        <div class="datos">
                            <div class="caja1">
                                <a href="/products/detail/ <%= imagenes[j].Producto.id %> ">
                                    <h4>
                                        <%= imagenes[j].Producto.nombre %>
                                    </h4>
                                </a>                            
                                <p>$ <%= imagenes[j].Producto.precio.toFixed(2) %>
                                </p>
                            </div>
                        </div>
                    </article>
                <% } %>   
            </section> 

        <% } else { %>
            <div class="error">
                <h4>No hay productos que coincidan con tu búsqueda <i class="far fa-frown"></i></h3>
            </div>
        <% } %>
         
         

    </main>

    <!--Footer-->
    <%- include('./partials/footer')  %> 


<%- include('./partials/scripts') %>     
</body>
</html>