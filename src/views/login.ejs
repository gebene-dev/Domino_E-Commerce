    <script>
    
        function passwordInput(){
            
            var eye = document.getElementById('eye');
            var input = document.getElementById('password');

            if (input.type == "password") {
                input.type = "text"
                eye.style.opacity = 0.8;
            }else{
                input.type = "password"
                eye.style.opacity = 0.2;
            }
        }
    </script>

</body>
</html>