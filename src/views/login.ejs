<!DOCTYPE html>
<html lang="es">
<!--Esto es el Head-->
    <%- include('./partials/head') %>
<!--Esto es el Head-->
<body class="login">
    <!--Esto es el header-->
        <%-include('./partials/header')%>
    <!--Esto es el header-->
    <main class="login-main">
        <form action="./login" method="POST" id="form-login">
            <section class="tengo-cuenta">
                <h3>Iniciá sesión en Domino</h3>
                <p id="error-empty" class="text-danger"></p>
                    <div class="tengo-cuenta__div">
                        <label for="email">Email</label>
                        <input type="email" class= "form-control <%= locals.errors && locals.errors.email ? 'is-invalid' : null %> " id="email" name="email" value= "<%= locals.old && old.email ? old.email : '' %>">
                        <p class="feedback" id="error-email">
                            <%= locals.errors && locals.errors.email ? errors.email.msg : null %>
                        </p>
                        <div>
                            <label for="contraseña">Contraseña</label>
                            <div class="contain">
                                <input type="password" class="passw form-control <%= locals.errors && locals.errors.password ? 'is-invalid' : null %> " id="password" name="password">
                                <img onclick="passwordInput()" src="/img/Show.png" alt="" class="icon" id="eye">
                            </div>
                            <p class="feedback" id="error-password">
                                <%= locals.errors && locals.errors.password ? errors.password.msg : null %>
                            </p>
                        </div>
                        
                    </div>
                    <div class="remember">
                        <input type="checkbox" name="recordar">
                        <label for="remember">Recordarme</label>
                    </div>
                    <p class="forgot-me"><a href="" >¿Olvidaste tu contraseña?</a></p>
                    <button type="submit" class="btn btn-dark"><a class="white">ingresar</a></button>
            </section>
        

            <section class="ingresar">

                <article>
                    <p>¿Sos nuevo usuario?</p>
                    <a href="./register"><button type="button" class="btn btn-dark">Registrate</button></a>
                </article>

                <article class="ingresar__redes">
                    <button type="button" class="ingresar__redes__button">
                        <div class="ingresar__redes__icon">
                        <i class="fab fa-facebook-square"></i> 
                        </div>
                        <p>Ingresar con Facebook</p>
                    </button>
                    
                </article>
                
                <article class="ingresar__redes">
                    <button type="button" class="ingresar__redes__button">
                        <div class="ingresar__redes__icon">
                            <i class="fab fa-google"></i> 
                        </div>
                        <p>Ingresar con Google</p></button>
                </article>

                
            </section>


        </form>

