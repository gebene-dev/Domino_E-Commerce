<!DOCTYPE html>
<html lang="es">
<!--Head-->
<%-include('./partials/head')%>

    <body class="editar-producto">

        <!--Header-->
        <%-include('./partials/header')%>

            <main>

                <div class="container">

                    <div class="formulario">

                        <h3>Editar Producto</h3>

                        <form class="needs-validation" action="/products/editProduct/<%= producto.id %>?_method=PUT" method="POST" id="form-register" novalidate>
                            <div class="primero">

                                <div class="form">
                                    <label>Producto</label>
                                    <input type="text" class="form-control" name="nombre" value="<%= producto.nombre %>"
                                        required>
                                    <span class="small text-danger">

                                    </span>
                                    <div class="invalid-feedback">
                                        Debes colocar un nombre
                                    </div>
                                </div>

                                <div class="form">
                                    <label>Descripción del producto</label>
                                    <input type="text" class="form-control" name="descripcion"
                                        value="<%= producto.descripcion %>" required>
                                    <span class="small text-danger">

                                    </span>
                                    <div class="invalid-feedback">
                                        Debes escribir una descripción
                                    </div>
                                </div>
                                <div class="form">
                                    <label>Descuento</label>
                                    <input type="number" value="<%= producto.descuento %>" class="form-control" name="descuento" placeholder="%%%" required>
                                </div>
                                <div class="form">
                                    <label>Precio</label>
                                        <input type="number" class="form-control" name="precio"
                                            value="<%= producto.precio %>" required>
                                        <span class="small text-danger">

                                        </span>
                                        <div class="invalid-feedback">
                                            El precio es obligatorio
                                        </div>
                                </div>

                                <div class="form">
                                    <label>Genero</label>
                                    <select class="form-select" name="genero" id="genero" required>
                                        <option value="<%=producto.Genero.id%>" hidden selected>
                                            <%= producto.Genero.genero %>
                                        </option>
                                        <option value="1">Hombre</option>
                                        <option value="2">Mujer</option>
                                        <option value="3">Unisex</option>
                                    </select>
                                    <span class="small text-danger">

                                    </span>
                                    <div class="invalid-feedback">
                                        Debes indicar un genero
                                    </div>
                                </div>

                            </div>

                            <div class="segundo">
                                <div class="form">
                                    <label>Categoria</label>
                                    <select class="form-select" name="categoria" id="categorias" required>
                                        <option value="<%=producto.Categoria.id%>" hidden selected>
                                            <%= producto.Categoria.nombre %>
                                        </option>
                                        <% for( let i = 0; i < categorias.length; i++ ) { %>
                                            <option value="<%=i+1%>"><%= categorias[i].nombre%></option>
                                        <% } %>
                                    </select>
                                    <span class="small text-danger">

                                    </span>
                                    <div class="invalid-feedback">
                                        Debes indicar la categoría
                                    </div>
                                </div>

                                <div class="form">
                                    <label>Talles</label>

                                    <div class="checkbox form-control <%= locals.errors && locals.errors.talle ? 'is-invalid' : null %>" id="talles" required>
                                        <% for( let i = 0; i < talles.length; i++ ) { %>
                                            <input type="checkbox" name="talle" value="<%=i+1 %>" class="size"><%= talles[i].talle %>
                                        <% } %>
                                    </div>
                                    <span class="small text-danger" id="error-talles">

                                    </span>
                                </div>

                            </div>

                            <div class="tercero">

                                <div class="form">
                                    <label>Imagen</label>
                                        <img src="/img/products/<% imagenes[0].nombre %>" alt="">
                                    <input type="file" class="form-control" id="" name="image" accept="image/*" multiple>
                                    <span class="text-danger">
                                    </span>
                                    <div class="invalid-feedback">
                                        Debes subir una imagen
                                    </div>

                                </div>


                                

                                <div class="botones">
                                    <button type="submit">Publicar</button>
                                    <button type="button">Cerrar</button>
                                </div>

                            </div>

                        </form>

                    </div>

                </div>

            </main>

            <!--Footer-->
            <%-include('./partials/footer')%>

                <!--Scripts-->
                <%-include('./partials/scripts')%>


                    <script src="/javascripts/validatorForms.js"></script>

    </body>

</html>